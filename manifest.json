{
  "manifest_version": 3,
  "name": "EasyBookmark",
  "version": "1.2.1",
  "description": "智能书签侧边栏，支持拼音搜索、拖拽移动、完整编辑功能和流畅的用户体验",

  "permissions": [
    "bookmarks",
    "storage",
    "sidePanel"
  ],

  "side_panel": {
    "default_path": "sidebar.html"
  },

  "action": {
    "default_title": "Open Bookmark Sidebar"
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
